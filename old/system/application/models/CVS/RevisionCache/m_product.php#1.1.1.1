class M_product extends Model{
    function  __construct() {
        parent::Model();
    }

//@get order products info array :m_product->get_product_active()
    public function get_product_active() {
        $data=array();
        $this->db->select('product_name,image,price,custom');
        $this->db->from('product');
        $this->db->where('active','1');
        $Q = $this->db->get();
        if($Q->num_rows > 0){
            foreach($Q->result_array() as $row){
                $data[] = $row;
            }
        }
        $Q->free_result();
        return $data;
        
    }

}//end of class

